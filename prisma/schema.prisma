generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  username    String    @unique
  name        String?
  password    String?
  createdAt   DateTime @default(now())
  sessions    Session[]
  
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model brands {
  id          String        @id @default(uuid())
  name        String        @unique
  inventories inventories[]
}

model inventories {
  id          String        @id @default(uuid())
  name        String        @unique
  brandId     String?
  state       STATE
  type        TYPE
  quantity    Int
  description String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @default(now())
  brand       brands?       @relation(fields: [brandId], references: [id], onDelete: Cascade)
}

model sessions {
  id        String   @id
  userId    String
  expiresAt DateTime
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model user {
  id       String     @id
  name     String?
  username String     @unique
  password String?
  sessions sessions[]
}

enum STATE {
  NEW
  LIKENEW
  USED
  DAMAGED
}

enum TYPE {
  BOOK
  ELECTRONIC
  FURNITURE
  CLOTHING
  OTHER
}